<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ISAVITApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryVariant">#121212</item>
        <item name="colorOnPrimary">#121221</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC700</item>
        <item name="colorSecondaryVariant">#FFC700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:autofilledHighlight">@color/transparent</item>
        <!-- Customize your theme here. -->

        <item name="colorBackgroundFloating">#121212</item>
        <item name="android:colorBackgroundFloating" tools:targetApi="23">#121212</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="materialCalendarFullscreenTheme">@style/CustomThemeOverlay_MaterialCalendar_Fullscreen</item>

    </style>

    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
    </style>

    <style name="Custom_MaterialCalendar.Fullscreen"
        parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>