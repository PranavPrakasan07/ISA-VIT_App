<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF796F</color>
    <color name="teal_700">#FF796F</color>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="background_color">#121212</color>
    <color name="text_color">#FFFFFF</color>
    <color name="hint_color">#80FFFFFF</color>
    <color name="green">#8AFF96</color>
    <color name="blue">#00B2FF</color>
    <color name="yellow">#FFC700</color>
    <color name="red">#FF6363</color>
    <color name="green_shade">#73D69B</color>

    <color name="blue_button_dark">#0164AB</color>
    <color name="blue_button_light">#0C97E8</color>
    <color name="shadow_light">#373737</color>
    <color name="shadow_dark">#171717</color>
    <color name="dark_button">#272727</color>
    <color name="heading_color">#A5A4A4</color>
    <color name="field_color">#747474</color>
    <color name="button_text">#D5D5D5</color>
    <color name="transparent">#00121212</color>

    <style name="edittext_field">

        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="background">@drawable/button_back_white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>

    </style>

    <style name="button_field">

        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="background">@drawable/button_back_green</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="heading">

        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/poppins_semibold</item>

    </style>

    <style name="content">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/poppins</item>

    </style>

    <style name="divider_style">

        <item name="android:dividerHeight">6dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="backgroundColor">@color/blue</item>

    </style>

    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>

    <style name="CustomButtonAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>
        <item name="neumorph_cornerSizeTopLeft">12dp</item>
        <item name="neumorph_cornerSizeTopRight">12dp</item>
        <item name="neumorph_cornerSizeBottomLeft">12dp</item>
        <item name="neumorph_cornerSizeBottomRight">12dp</item>
    </style>

    <style name="CustomButtonAppearance1">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>
        <item name="neumorph_cornerSizeTopLeft">8dp</item>
        <item name="neumorph_cornerSizeTopRight">8dp</item>
        <item name="neumorph_cornerSizeBottomLeft">8dp</item>
        <item name="neumorph_cornerSizeBottomRight">8dp</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/field_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>
