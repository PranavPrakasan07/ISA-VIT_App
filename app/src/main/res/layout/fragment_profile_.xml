<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".fragment.Profile_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/vatsal" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/n_name_card"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:padding="8dp"
        app:neumorph_backgroundColor="@color/transparent"
        app:neumorph_inset="10dp"
        app:neumorph_insetBottom="12dp"
        app:neumorph_insetEnd="12dp"
        app:neumorph_insetStart="12dp"
        app:neumorph_insetTop="12dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="@color/shadow_dark"
        app:neumorph_shadowColorLight="@color/shadow_light"
        app:neumorph_shadowElevation="4dp"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
        app:neumorph_shapeType="flat"
        app:neumorph_strokeColor="@color/blue_button_light"
        app:neumorph_strokeWidth="5dp">

        <TextView
            android:id="@+id/name_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_gradient"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Batsal Burma"
            android:textAlignment="center"
            android:textColor="@color/button_text"
            android:textSize="18sp" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/n_login_card"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/n_name_card"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        app:neumorph_backgroundColor="@color/transparent"
        app:neumorph_inset="10dp"
        app:neumorph_insetBottom="12dp"
        app:neumorph_insetEnd="12dp"
        app:neumorph_insetStart="12dp"
        app:neumorph_insetTop="12dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="@color/shadow_dark"
        app:neumorph_shadowColorLight="@color/shadow_light"
        app:neumorph_shadowElevation="4dp"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
        app:neumorph_shapeType="pressed"
        app:neumorph_strokeColor="@color/blue_button_light"
        app:neumorph_strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/n_position_card"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                app:neumorph_backgroundColor="@color/transparent"
                app:neumorph_inset="10dp"
                app:neumorph_insetBottom="12dp"
                app:neumorph_insetEnd="12dp"
                app:neumorph_insetStart="12dp"
                app:neumorph_insetTop="12dp"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shadowColorDark="@color/shadow_dark"
                app:neumorph_shadowColorLight="@color/shadow_light"
                app:neumorph_shadowElevation="4dp"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeColor="@color/blue_button_light"
                app:neumorph_strokeWidth="0dp">

                <TextView
                    android:id="@+id/board_position_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center_horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="Design Lead"
                    android:textAlignment="gravity"
                    android:textColor="@color/blue_button_light"
                    android:textSize="18sp" />

            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/vit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/n_position_card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal"
                android:text="VIT Email"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/p_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vit_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal"
                android:text="Personal Email"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reg_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal"
                android:text="Registration Number"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/room_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_n"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal"
                android:text="Room Number"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mobile_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_n"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal"
                android:text="Mobile"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile_n"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal"
                android:text="Date of Birth"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/n_domain1_card"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dob"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                app:neumorph_backgroundColor="@color/transparent"
                app:neumorph_inset="10dp"
                app:neumorph_insetBottom="12dp"
                app:neumorph_insetEnd="12dp"
                app:neumorph_insetStart="12dp"
                app:neumorph_insetTop="12dp"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shadowColorDark="@color/shadow_dark"
                app:neumorph_shadowColorLight="@color/shadow_light"
                app:neumorph_shadowElevation="4dp"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeColor="@color/blue_button_light"
                app:neumorph_strokeWidth="0dp">

                <TextView
                    android:id="@+id/domain1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center_horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="AI/ML"
                    android:textAlignment="gravity"
                    android:textColor="@color/blue_button_light"
                    android:textSize="18sp" />
            </soup.neumorphism.NeumorphCardView>


            <soup.neumorphism.NeumorphCardView
                android:id="@+id/n_domain2_card"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dob"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                app:neumorph_backgroundColor="@color/transparent"
                app:neumorph_inset="10dp"
                app:neumorph_insetBottom="12dp"
                app:neumorph_insetEnd="12dp"
                app:neumorph_insetStart="12dp"
                app:neumorph_insetTop="12dp"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shadowColorDark="@color/shadow_dark"
                app:neumorph_shadowColorLight="@color/shadow_light"
                app:neumorph_shadowElevation="4dp"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeColor="@color/blue_button_light"
                app:neumorph_strokeWidth="0dp">

                <TextView
                    android:id="@+id/domain2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center_horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="Design"
                    android:textAlignment="gravity"
                    android:textColor="@color/blue_button_light"
                    android:textSize="18sp" />
            </soup.neumorphism.NeumorphCardView>

        </RelativeLayout>

    </soup.neumorphism.NeumorphCardView>

</RelativeLayout>