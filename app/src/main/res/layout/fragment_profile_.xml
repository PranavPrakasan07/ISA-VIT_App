<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".Profile_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/pranav"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/board_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_semibold"
            android:textAlignment="gravity"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="28sp"
            android:text="Name" />

        <TextView
            android:id="@+id/board_member_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_regular"
            android:textAlignment="gravity"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="22sp"
            android:text="Position" />

        <TextView
            android:id="@+id/board_member_pemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_regular"
            android:textAlignment="gravity"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="18sp"
            android:text="Personal Email" />

        <TextView
            android:id="@+id/board_member_vemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_regular"
            android:textAlignment="gravity"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="18sp"
            android:text="VIT Email" />

        <TextView
            android:id="@+id/board_member_regnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_regular"
            android:textAlignment="gravity"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="18sp"
            android:text="Registration Number" />

        <TextView
            android:id="@+id/board_member_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_regular"
            android:textAlignment="gravity"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="18sp"
            android:text="Room Number" />

        <TextView
            android:id="@+id/board_member_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_regular"
            android:textAlignment="gravity"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="18sp"
            android:text="Mobile Number" />

    </LinearLayout>

    </LinearLayout>

</FrameLayout>