<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.isa_vitapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ISAVITApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".HomeCoreActivity"></activity>
        <activity android:name=".activity.EventsActivity" />
        <activity android:name=".activity.AboutActivity" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".RemoveTaskActivity" />
        <activity android:name=".activity.LoginSplash" />
        <activity android:name=".activity.LogoutSplash" />
        <activity android:name=".activity.Login" />
        <activity android:name=".activity.SignUp" />
        <activity android:name=".activity.Home" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.NotMemberPage" />
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>